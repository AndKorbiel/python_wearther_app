#:set default_font_size "34sp"
#:set default_font_color 255,255,255,1

<AppLayout>
    GridLayout:
        cols:1
        size: root.width * 0.8, root.height * 0.8
        canvas:
            Color:
                rgba: 255/255, 252/255, 245/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        row_default_height: 50
        row_force_default: True
        center: root.width / 2, root.height / 2

        Label:
            text: f"{app.city_name}"
            font_size: default_font_size
            color: default_font_color

        Label:
            text: f"{app.todays_name}, {app.date}"
            color: default_font_color


        GridLayout:
            cols:2

            Label:
                text: f"{app.overall}"
                color: default_font_color
                font_size: "17sp"
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            Image:
                id: imageView
                source: f"{app.weather_icon}"
                width: 100
                allow_stretch: True

        Label:
            text: f"Pressure: {app.pressure}"
            color: default_font_color

        Label:
            text: f"Wind speed: {app.windSpeed}"
            color: default_font_color

